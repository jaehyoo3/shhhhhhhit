<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userTraits">

    <!-- ResultMap 정의 -->
    <resultMap id="userTraitsResultMap" type="UserTraits">
        <id property="traitsId" column="traits_id"/>
        <result property="userId" column="user_id"/>
        <result property="answers" column="answers"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- userTraits.findByUserId: 사용자 ID로 성향 조회 -->
    <select id="findByUserId" parameterType="Long" resultMap="userTraitsResultMap">
        SELECT traits_id, user_id, answers, created_at, updated_at
        FROM user_traits
        WHERE user_id = #{userId}
    </select>

    <!-- userTraits.insertTraits: 성향 등록 -->
    <insert id="insertTraits" parameterType="UserTraits" useGeneratedKeys="true" keyProperty="traitsId">
        INSERT INTO user_traits (user_id, answers)
        VALUES (#{userId}, #{answers})
    </insert>

    <!-- userTraits.updateTraits: 성향 업데이트 -->
    <update id="updateTraits" parameterType="map">
        UPDATE user_traits
        SET answers = #{answers},
            updated_at = NOW()
        WHERE user_id = #{userId}
    </update>

    <!-- userTraits.existsByUserId: 사용자 성향 존재 여부 확인 -->
    <select id="existsByUserId" parameterType="Long" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM user_traits WHERE user_id = #{userId})
    </select>

</mapper>


