<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="userPreference">

    <!-- 선호 가격대 조회 -->
    <select id="findPriceTiersByUserId" parameterType="Long" resultType="String">
        SELECT price_tier
        FROM user_trait_prices
        WHERE user_id = #{userId}
    </select>

    <!-- 선호 언어 조회 -->
    <select id="findLanguagesByUserId" parameterType="Long" resultType="String">
        SELECT language
        FROM user_trait_languages
        WHERE user_id = #{userId}
    </select>

    <!-- 선호 가격대 존재 여부 -->
    <select id="existsPriceTierByUserId" parameterType="Long" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM user_trait_prices WHERE user_id = #{userId})
    </select>

    <!-- 선호 언어 존재 여부 -->
    <select id="existsLanguageByUserId" parameterType="Long" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM user_trait_languages WHERE user_id = #{userId})
    </select>

    <!-- 선호 가격대 전체 삭제 -->
    <delete id="deletePriceTiersByUserId" parameterType="Long">
        DELETE FROM user_trait_prices WHERE user_id = #{userId}
    </delete>

    <!-- 선호 언어 전체 삭제 -->
    <delete id="deleteLanguagesByUserId" parameterType="Long">
        DELETE FROM user_trait_languages WHERE user_id = #{userId}
    </delete>

    <!-- 선호 가격대 등록 (단건) -->
    <insert id="insertPriceTier" parameterType="map">
        INSERT INTO user_trait_prices (user_id, price_tier)
        VALUES (#{userId}, #{priceTier})
    </insert>

    <!-- 선호 언어 등록 (단건) -->
    <insert id="insertLanguage" parameterType="map">
        INSERT INTO user_trait_languages (user_id, language)
        VALUES (#{userId}, #{language})
    </insert>

    <!-- 선호 가격대 일괄 등록 -->
    <insert id="insertPriceTiers" parameterType="map">
        INSERT INTO user_trait_prices (user_id, price_tier)
        VALUES
        <foreach collection="priceTiers" item="priceTier" separator=",">
            (#{userId}, #{priceTier})
        </foreach>
    </insert>

    <!-- 선호 언어 일괄 등록 -->
    <insert id="insertLanguages" parameterType="map">
        INSERT INTO user_trait_languages (user_id, language)
        VALUES
        <foreach collection="languages" item="language" separator=",">
            (#{userId}, #{language})
        </foreach>
    </insert>

</mapper>

